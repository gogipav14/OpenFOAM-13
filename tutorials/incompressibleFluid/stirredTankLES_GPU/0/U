FoamFile
{
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    bottom
    {
        type            noSlip;
    }

    top
    {
        // Free surface approximation - slip condition
        type            slip;
    }

    wall
    {
        type            noSlip;
    }

    "AMI_.*"
    {
        type            cyclicAMI;
    }
}

