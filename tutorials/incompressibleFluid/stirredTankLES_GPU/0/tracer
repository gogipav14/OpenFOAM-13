FoamFile
{
    format      ascii;
    class       volScalarField;
    object      tracer;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Passive scalar for mixing time measurement
// Initially set to 0 everywhere, will be seeded via setFields

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    bottom
    {
        type            zeroGradient;
    }

    top
    {
        type            zeroGradient;
    }

    wall
    {
        type            zeroGradient;
    }

    "AMI_.*"
    {
        type            cyclicAMI;
    }
}

